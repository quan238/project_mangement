{
  "name": "pm_app",
  "version": "1.0.0",
  "author": "quantran238",
  "license": "MIT",
  "scripts": {
    "start": "docker-compose up",
    "start:docker": "docker compose build backend && docker compose rm --stop backend && docker compose up -d backend",
    "dev": "nodemon",
    "seed": "ts-node ./src/database/seed.ts",
    "build": "node esbuild.config.js",
    "start:test": "cross-env NODE_ENV='test' DB_DATABASE='jira_test' npm start",
    "start:production": "pm2 start --name 'jira_api' node -- -r ./tsconfig-paths.js build/index.js",
    "pre-commit": "lint-staged",
    "predev": "npm run swagger",
    "prebuild": "npm run swagger",
    "swagger": "tsoa spec"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "class-sanitizer": "^1.0.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.13.2",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-async-handler": "^1.1.4",
    "faker": "^4.1.0",
    "ioredis": "^4.28.5",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.15",
    "module-alias": "^2.2.2",
    "morgan": "^1.10.0",
    "pg": "^8.7.3",
    "reflect-metadata": "^0.1.13",
    "striptags": "^3.1.1",
    "swagger-jsdoc": "^6.2.1",
    "swagger-ui-express": "^4.4.0",
    "tsoa": "^4.0.0",
    "typeorm": "^0.2.45"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/cookie-parser": "^1.4.3",
    "@types/cors": "^2.8.6",
    "@types/express": "^4.17.2",
    "@types/faker": "^4.1.7",
    "@types/ioredis": "^4.28.10",
    "@types/jsonapi-serializer": "^3.6.2",
    "@types/jsonwebtoken": "^8.3.5",
    "@types/lodash": "^4.14.149",
    "@types/morgan": "^1.9.3",
    "@types/node": "^12.12.11",
    "@types/redis": "^4.0.11",
    "@types/swagger-jsdoc": "^6.0.1",
    "@types/swagger-ui-express": "^4.1.3",
    "concurrently": "^7.2.0",
    "cross-env": "^6.0.3",
    "esbuild": "^0.14.39",
    "esbuild-node-externals": "^1.4.1",
    "eslint": "^6.1.0",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-config-prettier": "^6.7.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-prettier": "^3.1.1",
    "lint-staged": "^9.4.3",
    "nodemon": "^2.0.16",
    "prettier": "^1.19.1",
    "ts-node": "^10.8.0",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^4.6.4"
  },
  "_moduleDirectories": [
    "src"
  ],
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write",
      "git add"
    ]
  }
}
